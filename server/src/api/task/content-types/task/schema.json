    "task_status": {
      "type": "enumeration",
      "enum": [
        "Backlog",
        "To do",
        "In progress",
        "Ready for review",
        "Done"
      ]
    },
    "labels": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::label.label",
      "inversedBy": "tasks"
    }
  }
